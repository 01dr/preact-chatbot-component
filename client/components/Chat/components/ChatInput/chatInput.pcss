.input {
	display: flex;
	justify-content: space-between;
	align-items: center;
    padding: 10px 20px;
	height: 25px;
	background: #f0f3f5;
	position: absolute;
    width: calc(100% - 40px);
    bottom: 0;
	border-radius: 0 0 5px 5px;

	& > input {
		flex-basis: 100%;
		border: none;
		outline: none;
		background: transparent;
	}

	& > button {
		flex-basis: 30px;
		background: transparent;
		cursor: pointer;
		outline: none;
		border: none;
		padding: 0;
	}
}

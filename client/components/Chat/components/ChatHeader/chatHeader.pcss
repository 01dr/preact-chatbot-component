.header {
	display: flex;
	align-items: center;
	justify-content: flex-start;
	padding: 20px;
	background: #276658;
	border-radius: 5px 5px 0 0;

	& > .avatar {
		width: 40px;
		height: 40px;
		margin: 0 20px 0 0;

		& > img {
			width: 100%;
			border-radius: 50%;
		}
	}

	& > .name {
	    font-size: 1.5em;
		color: #fff;
	}
}
